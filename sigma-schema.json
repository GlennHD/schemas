{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Sigma rule Yaml schema validator",
    "description": "JSON Schema validator for Sigma .sigma.yml and .sigma.yaml files",
    "type": "object",
    "required": ["id", "title"],
    "additionalProperties": false,
    "properties": {
        "title": {
            "type": "string"
        },
        "id": {
            "type": "string",
            "format": "uuid"
        },
        "status": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "references": {
            "type": "array",
            "items": {
                "type": "string",
                "format": "uri",
                "qt-uri-protocols": [
                    "https"
                ]
            }
        },
        "author": {
            "type": "string"
        },
        "date": {
            "type": "string"
        },
        "tags": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "logsource": {
            "$ref": "#/definitions/Logsource"
        },
        "detection": {
            "$ref": "#/definitions/Detection"
        },
        "falsepositives": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "level": {
            "type": "string"
        }
    "required": [
        "author",
        "date",
        "description",
        "detection",
        "falsepositives",
        "id",
        "level",
        "logsource",
        "references",
        "status",
        "tags",
        "title"
    ],
        "Detection": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "selection1": {
                    "$ref": "#/definitions/Selection1"
                },
                "selection2": {
                    "$ref": "#/definitions/Selection2"
                },
                "condition": {
                    "type": "string"
                }
            },
            "required": [
                "condition",
                "selection1",
                "selection2"
            ],
            "title": "Detection"
        },
        "Selection1": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "Image|contains": {
                    "type": "string"
                }
            },
            "required": [
                "Image|contains"
            ],
            "title": "Selection1"
        },
        "Selection2": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "CommandLine|contains|all": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "CommandLine|contains|all"
            ],
            "title": "Selection2"
        },
        "Logsource": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "category": {
                    "type": "string"
                },
                "product": {
                    "type": "string"
                }
            },
            "required": [
                "category",
                "product"
            ],
            "title": "Logsource"
        }
    },
    "properties": {
        "line_endings": {
          "description": "This rule ensures your project uses only windows or unix line endings. [default level: ignore]",
          "allOf": [
            {
              "$ref": "#/definitions/base"
            }
          ]
        }
    }
}
