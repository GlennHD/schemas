{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Sigma rule Yaml schema validator",
    "description": "JSON Schema validator for Sigma .sigma.yml and .sigma.yaml files",
    "type": "object",
    "required": [
        "author",
        "date",
        "description",
        "detection",
        "falsepositives",
        "id",
        "level",
        "logsource",
        "references",
        "status",
        "tags",
        "title"
    ],
    "additionalProperties": false,
    "properties": {
        "title": {
            "type": "string"
        },
        "id": {
            "type": "string",
            "format": "uuid"
        },
        "status": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "references": {
            "type": "array",
            "items": {
                "type": "string",
                "format": "uri",
                "qt-uri-protocols": [
                    "https"
                ]
            }
        },
        "author": {
            "type": "string"
        },
        "date": {
            "type": "string"
        },
        "tags": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "logsource": {
            "$ref": "#/definitions/Logsource"
        },
        "detection": {
            "$ref": "#/definitions/Detection"
        },
        "falsepositives": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "level": {
            "type": "string"
        },
        "Detection": {
            "type": "object",
            "additionalProperties": false,
            "title": "Detection"
        },
        "Logsource": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "category": {
                    "type": "string"
                },
                "product": {
                    "type": "string"
                }
            },
            "required": [
                "category",
                "product"
            ],
            "title": "Logsource"
        }
    }
}
